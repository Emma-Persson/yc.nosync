---
import Header from "../components/Header.astro";
import Card from "../components/Card.astro";
import "../styles/general.css";
import Button from "../components/Button.astro";
import Footer from "../components/Footer.astro";
import BigCard from "../components/BigCard.astro";
import { Image } from "astro:assets";
import goodtoknow from "../../public/imgs/good_to_know.png";
import gæstebog from "../../public/imgs/gæstebog.png";
import stor from "../../public/imgs/imgstor.png";
import bestyrelse from "../../public/imgs/bestyrelse.png";
import lyserød from "../../public/imgs/lyserød.png";
import test from "../../public/imgs/test.png";
import howto from "../../public/imgs/howto.png";
import Section4 from "../components/Section4.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <Header
      text="Vi er en frivillig forening som hjælper unge talenter i den danske reklame- og kommunikationsbranche med at netværke, udvikle dit portfolio og få foden indenfor i den kreative branche."
    />

    <section>
      <h1>Alt om netværksevents</h1>
      <p>Alt hvad du skal bruge til at føle dig klar til at deltage</p>
      <div>
        <BigCard
          placeholder={goodtoknow}
          buttonText="Se her"
          headline="Good to know hvis det er dit første netværksevent."
          text="Alt det du skal vide før du deltager i et netværksevent."
          order="1"
        />
        <BigCard
          placeholder={gæstebog}
          buttonText=" Se her"
          headline="Mød andre unge kreative der har deltaget i vores events"
          text="Læs om deres oplevelser og få gode råd fra dem der har prøvet det før."
          order="-1"
        />
      </div>
      <section class="img-stor">
        <Image src={stor} alt="Stor" />
        <h1>Vær med til vores månedlige fællesmiddag!</h1>
        <Button buttonText="Se her" />
      </section>

      <section>
        <h2>Udforsk din kreativitet</h2>
        <p>
          Hold øje med sjove quizzer, gode how to’s og andet kreativt indhold
        </p>
        <div class="grid_1-1">
          <div>
            <Card
              placeholder={test}
              headline="Hvilken kreativ profil er du?"
              text="Gå på opdagelse i test-biblioteket, og lær dig selv bedre at kende!"
            />
            <Button buttonText="Se her" type="secondary" />
          </div>
          <div>
            <Card
              placeholder={howto}
              headline="How to’s"
              text="Se her hvordan du kan styrke dine kreative evner"
            />
            <Button buttonText="Se her" />
          </div>
        </div>
      </section>
      <Section4 />

      <section>
        <BigCard
          placeholder={bestyrelse}
          buttonText="Se her"
          headline="Mød menneskerne bag organisationen"
          text="YCDK hjalp mig med at overkomme min socialangst med networking. Den oplevelse vil jeg gerne give videre og lære fra mig, så meget jeg kan."
          order="-1"
        />
      </section>
      <Footer />
    </section>
  </body>
</html>
