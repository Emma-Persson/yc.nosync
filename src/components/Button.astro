---
const { text, type } = Astro.props;
---

<a href="#" class={type}>
  <p>{text}</p>
</a>
<style>
  a {
    text-decoration: none;
    color: white;
    background-color: var(--color-lyserød);
    display: inline-block;
    border-radius: 25px;
    padding: 10px 30px;
    text-transform: uppercase;
    font-weight: 600;
  }
  p {
    margin: 0;
  }
  .secondary {
    color: var(--color-blå);
    background-color: var(--color-lyseblå);
  }
</style>
