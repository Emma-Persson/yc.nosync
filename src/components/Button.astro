---
const { buttonText, type } = Astro.props;
---

<a href="#" class={type}>{buttonText} </a>
<style>
  a {
    text-decoration: none;
    color: white;
    background-color: var(--color-lyserød);
    display: inline-block;
    border-radius: 25px;
    padding: 8px 20px;
    text-transform: uppercase;
    font-weight: 600;
    font-size: x-small;
  }
  p {
    margin: 0;
    font-size: xx-small;
  }
  .secondary {
    color: var(--color-blå);
    background-color: var(--color-lyseblå);
  }
  @media screen and (width >= 768px) {
    a {
      font-size: medium;
      padding: 10px 30px;
    }
    p {
      font-size: medium;
    }
  }
</style>
