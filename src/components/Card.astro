---
const { placeholder, headline, text } = Astro.props;
import { Image } from "astro:assets";
---

<article>
  <Image src={placeholder} alt="Beskrivende tekst" class="placeholder" />
  <h3>{headline}</h3>
  <p>{text}</p>
</article>

<style>
  h1,
  h2,
  h3,
  p {
    margin-bottom: 0.5rem;
  }

  img {
    width: 100%;
  }

  h2 {
    font-size: smaller;
  }

  p {
    font-size: smaller;
  }

  @media screen and (width >= 800px) {
    h2 {
      font-size: medium;
    }

    p {
      font-size: medium;
    }
  }
</style>
