---
import { Image } from "astro:assets";
import Button from "./Button.astro";
const { headline, text, placeholder, buttonText, order } = Astro.props;
---

<section class="feature">
  <Image src={placeholder} alt="Beskrivende tekst" class="placeholder" />
  <div class="content">
    <h2>{headline}</h2>
    <p>{text}</p>
    <Button buttonText={buttonText} />
  </div>
</section>
<style define:vars={{ order }}>
  .placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .content {
    order: var(--order);
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }
  .feature {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    grid-column: 2 / span 1;
    gap: 5rem;
  }
</style>
