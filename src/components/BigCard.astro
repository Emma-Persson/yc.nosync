---
import { Image } from "astro:assets";
import Button from "./Button.astro";
const { headline, text, placeholder, buttonText, order } = Astro.props;
---

<section class="feature">
  <Image src={placeholder} alt="Beskrivende tekst" class="placeholder" />
  <div class="content">
    <h2>{headline}</h2>
    <p>{text}</p>
    <Button buttonText={buttonText} />
  </div>
</section>
<style define:vars={{ order }}>
  .placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .content {
    order: var(--order);
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }
  .feature {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    grid-column: 2 / span 1;
    gap: 3rem;
    align-items: center;
  }
  section {
    padding: 2rem 4rem;
  }
  section img {
    width: 80%;
    max-width: 350px;
    height: auto;
    object-fit: cover;
    justify-self: center;
  }
  section button {
    justify-content: center;
  }

  p,
  h2 {
    color: var(--color-bl√•);
    max-width: 500px;
  }
  h2 {
    font-weight: 700;
    font-style: bold;
    font-size: xx-large;
  }
</style>
